<!DOCTYPE html>
<html>

<head>
  <title>{{ title }}</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="/javascripts/materialize.min.js"></script>
  <script src="/javascripts/materialize_init.js"></script>
</head>

<body>
  <header>
    <div id="alerts" class="container">
      {{# alert }}
      <h5>{{ text }}</h5>
      {{/ alert }}
    </div>
  </header>
  <main>
    <div class="row">
      <div id="profile" class="col m8">
        <div class="row">
          <h1>
            <span class="col s12 m8">{{ user.username }}</span>
            <form class="col s12 m4 right" action="/logout" method="POST">
              <button type="submit" class="btn">Logout</button>
            </form>
          </h1>
        </div>
        <div class="row">
          <div class="col s12 m6">
            <div class="card resizable">
              <div class="card-image">
                <img id="person-img" :src="person.imgUrl">
              </div>
              <div id="person-content" class="card-content">
                <div id="person-name" class="card-title">
                  <span v-if="person.title">{{ person.title }} </span>
                  <span>{{ person.firstname }} </span>
                  <span>{{ person.lastname }} </span>
                </div>
                <p>
                  <span>Gender: </span>
                  <span>{{ person.gender | capitalize }}</span>
                </p>
                <p>
                  <span>Email: </span>
                  <span>{{ person.email }}</span>
                </p>
                <p>
                  <span>Phone: </span>
                  <span>{{ person.phone }}</span>
                </p>
                <p>
                  <span>Street: </span>
                  <span>{{ person.streetnumber }} </span>
                  <span>{{ person.streetname }}</span>
                </p>
                <p>
                  <span>City: </span>
                  <span>{{ person.city }}</span>
                </p>
                <p>
                  <span>State: </span>
                  <span>{{ person.state }}</span>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="chat" class="col m4">
        <h1>Chat</h1>
      </div>
    </div>
  </main>
</body>

</html>